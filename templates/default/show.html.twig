{% extends 'base.html.twig' %}

{% block body %}
<article>
    <h1>{{ issue.title }}</h1>
    <p>Créé le {{ issue.createdAt | format_date }}
        {% if issue.createdBy is not null %} par {{ issue.createdBy.email }} {% endif %}
    </p>
    <div>{{ issue.description | nl2br }}</div>
</article>
{% endblock %}
